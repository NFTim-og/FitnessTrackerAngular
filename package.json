{
  "name": "fitness-tracker",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "npm run start:all",
    "start:all": "concurrently --kill-others-on-fail \"npm run start:db\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:db": "cd backend && docker-compose up -d && echo 'Database started'",
    "start:backend": "cd backend && wait-on tcp:localhost:3306 --timeout 30000 && npm start",
    "start:frontend": "wait-on http://localhost:3000/health --timeout 60000 && ng serve --host 0.0.0.0",
    "start:frontend-only": "ng serve",
    "stop": "npm run stop:all",
    "stop:all": "cd backend && docker-compose down",
    "build": "ng build",
    "test": "ng test",
    "watch": "ng test --watch=true",
    "test:coverage": "ng test --code-coverage",
    "setup": "npm install && cd backend && npm install && npm run docker:init"
  },
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/cdk": "^18.2.13",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@angular/material": "^18.2.13",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.2.13",
    "lucide-angular": "^0.447.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.5.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "18.2.19",
    "@angular/cli": "^18.1.0",
    "@angular/compiler-cli": "^18.1.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^8.2.2",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.5.0",
    "wait-on": "^7.2.0"
  }
}
